<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:theme="@style/MyTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:background="@drawable/item_pressed_member"
    android:paddingTop="@dimen/item_padding_top"
    android:paddingRight="@dimen/content_padding_right"
    android:paddingLeft="@dimen/content_padding_left"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_gravity="left|center"
    android:gravity="center_vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_member"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        app:border_color="#FF000000"
        app:border_width="1dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:layout_marginLeft="2dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_member_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="John Terry"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="@dimen/item_padding_text_left">
        </TextView>
        <TextView
            android:id="@+id/txt_member_role"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Super Admin"
            android:textColor="@color/monsoon"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/item_padding_text_left">
        </TextView>

    </LinearLayout>



</LinearLayout>