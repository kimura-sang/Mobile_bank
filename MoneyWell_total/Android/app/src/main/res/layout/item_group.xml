<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:theme="@style/MyTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:background="@drawable/item_pressed_top"
    android:paddingTop="@dimen/item_padding_top"
    android:paddingRight="@dimen/content_padding_right"
    android:paddingLeft="@dimen/content_padding_left"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_gravity="left|center"
    android:gravity="center_vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_group"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        app:border_color="#FF000000"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/txt_group_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Henry's Party"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginLeft="@dimen/item_padding_text_left">
    </TextView>

    <TextView
        android:id="@+id/txt_unread_count"
        android:layout_width="@dimen/notice_count_size"
        android:layout_height="@dimen/notice_count_size"
        android:background="@drawable/circle_button_red"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_gravity="center">
    </TextView>

</LinearLayout>