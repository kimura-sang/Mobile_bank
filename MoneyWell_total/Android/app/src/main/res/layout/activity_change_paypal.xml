<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_change_paypal"
    android:orientation="vertical"
    tools:context="com.money.well.controller.settings.ChangePaypalActivity">

    <include
        android:id="@+id/login_topbar"
        layout="@layout/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/content_padding_left"
        android:paddingRight="@dimen/content_padding_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Please change your paypal account"
            android:textColor="@color/black">
        </TextView>

        <LinearLayout
            android:id="@+id/lay_nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:paddingLeft="10dp"
                android:textSize="@dimen/dimen_text_font_size"
                android:shadowColor="@color/black"
                android:text="mars@mail.com">
            </EditText>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/monsoon" />

        <Button
            android:id="@+id/btn_save"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:text="Save"
            android:background="@drawable/radius_button">
        </Button>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_new_paypal_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/linked_text"
                android:textSize="12dp"
                android:text="Create new account now">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>